<h1>Movie list</h1>

<div class='container'>
  <div class='row'>

    {{#each movies}}
      <div class='card' style='width: 18rem;'>
        <img src='{{imageUrl}}' class='card-img-top' alt='{{title}}' />
        <div class='card-body'>
          <h5 class='card-title'>{{title}}</h5>
          <p class='card-text'>{{description}}</p>
          <a href='/movies/edit/{{_id}}' class='btn btn-primary'>Edit</a>
        </div>
      </div>
    {{/each}}
  </div>
</div>