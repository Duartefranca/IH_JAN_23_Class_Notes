<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Mustaches</title>
  </head>
  <body>
    <h1>Ironhackers be like</h1>
    <img src='https://c.tenor.com/uBcbvnuP3K0AAAAd/lil-yachty-drake.gif' alt='yes' />

    <h2>Hello {{name}} </h2>
    <h3>Welcome to the {{bootcamp}} bootcamp</h3>

    {{! Handlebars helpers }}
    {{! if helper }}

    {{#if loggedIn}}
      <button>Log out</button>
    {{else}}
      <button>Sign up</button>
    {{/if}}

    {{#if error}}
      <p>There was an error on the server</p>
    {{/if}}

    {{! unless }}
    {{#unless favouritePokemon}}
      <h3>You haven't selected a pokemon yet</h3>
    {{/unless}}

    {{! Each helper }}
    <ul>
      {{#each cities}}
        <li>{{this}}</li>
      {{/each}}
    </ul>

  </body>

</html>